<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.register.RegisterActivity1">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/register1_step_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
 >
      <ImageView
          android:layout_width="600dp"
          android:layout_height="wrap_content"
          android:src="@drawable/register_step1"
          />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/register1_card_tag_layout"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register1_step_layout">

        <ImageView
            android:id="@+id/register1_card_tag"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/register_card"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register1_card_tag_layout">

        <ImageView

            android:id="@+id/register1_prev_btn"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/register1_prev_btn"/>
        <ImageView
            android:id="@+id/register1_prev_text"
            android:layout_width="200dp"
            android:layout_height="100dp"

            android:src="@drawable/register1_prev"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>