<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medical.emergency.CodeBlueActivity">
    <LinearLayout
        android:gravity="center"
        android:id="@+id/emergency_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:text="응급 상황 발생"/>
        <TextView
            android:id="@+id/emergency_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendardsemibold"
            android:textSize="30sp"
            android:textColor="#E91E1E"
            android:text="현재 코드 블루가 발생하였습니다."/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="150dp"
        android:id="@+id/emergency_layout_tag_layout"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emergency_layout">
        <ImageView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:id="@+id/emergency_send_pic"
            android:src="@drawable/codeblue_pic"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent" >

        <ImageView

            android:id="@+id/register1_prev_btn"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/register1_prev_btn"/>
        <ImageView
            android:id="@+id/register1_prev_text"
            android:layout_width="200dp"
            android:layout_height="100dp"

            android:src="@drawable/register1_prev"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>